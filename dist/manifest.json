{
  "manifest_version": 3,
  "name": "Authentic Emojis for LinkedIn Posts",
  "version": "1.0.103",
  "description": "Captures authentic face expressions and posts them as emojis to LinkedIn post comments.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon_128.png"
    },
    "default_title": "Authentic Expressions for LinkedIn Posts"
  },
  "icons": {
    "128": "icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "models/*",
        "wasm/*",
        "sandbox.html"
      ],
      "matches": [
        "https://www.linkedin.com/*"
      ]
    }
  ]
}